<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<fx:root xmlns:fx="http://javafx.com/fxml/1" type="TitledPane"
	collapsible="false">
	<VBox spacing="10">
		<HBox maxWidth="Infinity" spacing="10">
			<Label fx:id="valueLabel" maxHeight="Infinity" HBox.hgrow="ALWAYS"
				maxWidth="Infinity" />
			<Button fx:id="resetButton" onAction="#resetButtonClicked"
				maxWidth="Infinity" maxHeight="Infinity" HBox.hgrow="NEVER" text="%resetButton" />
		</HBox>
		<Slider fx:id="valueSlider" maxHeight="Infinity" />
	</VBox>
</fx:root>
